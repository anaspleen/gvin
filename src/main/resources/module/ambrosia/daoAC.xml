<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<!-- ***** Section des DAO ***** -->
	<!-- abstract -->
	<bean id="abstractDao" class="fr.tic.gvin.dao.AbstractDaoMongo"
		abstract="true">
		<property name="databaseURL" value="${ambrosia.db.url}" />
		<property name="databaseNom" value="${ambrosia.db.nom}" />
	</bean>

	<!-- daos -->
	<bean id="bouteilleDao" class="fr.tic.gvin.dao.BouteilleDaoMongo"
		parent="abstractDao" />
	<bean id="regleDao" class="fr.tic.gvin.dao.RegleDaoMongo" parent="abstractDao" />

</beans>
